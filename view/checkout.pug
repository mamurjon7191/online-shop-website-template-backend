extends base 
block main
  // Breadcrumb Start
  .container-fluid
    .row.px-xl-5
      .col-12
        nav.breadcrumb.bg-light.mb-30
          a.breadcrumb-item.text-dark(href='#') Home
          a.breadcrumb-item.text-dark(href='#') Shop
          span.breadcrumb-item.active Checkout
  // Breadcrumb End
  // Checkout Start
  .container-fluid
    .row.px-xl-5
      .col-lg-8
        h5.section-title.position-relative.text-uppercase.mb-3
          span.bg-secondary.pr-3 Billing Address
        .bg-light.p-30.mb-5
          .row
            .col-md-6.form-group
              label First Name
              input.form-control(type='text' placeholder='John')
            .col-md-6.form-group
              label Last Name
              input.form-control(type='text' placeholder='Doe')
            .col-md-6.form-group
              label E-mail
              input.form-control(type='text' placeholder='example@email.com')
            .col-md-6.form-group
              label Mobile No
              input.form-control(type='text' placeholder='+123 456 789')
            .col-md-6.form-group
              label Address Line 1
              input.form-control(type='text' placeholder='123 Street')
            .col-md-6.form-group
              label Address Line 2
              input.form-control(type='text' placeholder='123 Street')
            .col-md-6.form-group
              label Country
              select.custom-select
                option(selected='') United States
                option Afghanistan
                option Albania
                option Algeria
            .col-md-6.form-group
              label City
              input.form-control(type='text' placeholder='New York')
            .col-md-6.form-group
              label State
              input.form-control(type='text' placeholder='New York')
            .col-md-6.form-group
              label ZIP Code
              input.form-control(type='text' placeholder='123')
            .col-md-12.form-group
              .custom-control.custom-checkbox
                input#newaccount.custom-control-input(type='checkbox')
                label.custom-control-label(for='newaccount') Create an account
            .col-md-12
              .custom-control.custom-checkbox
                input#shipto.custom-control-input(type='checkbox')
                label.custom-control-label(for='shipto' data-toggle='collapse' data-target='#shipping-address') Ship to different address
        #shipping-address.collapse.mb-5
          h5.section-title.position-relative.text-uppercase.mb-3
            span.bg-secondary.pr-3 Shipping Address
          .bg-light.p-30
            .row
              .col-md-6.form-group
                label First Name
                input.form-control(type='text' placeholder='John')
              .col-md-6.form-group
                label Last Name
                input.form-control(type='text' placeholder='Doe')
              .col-md-6.form-group
                label E-mail
                input.form-control(type='text' placeholder='example@email.com')
              .col-md-6.form-group
                label Mobile No
                input.form-control(type='text' placeholder='+123 456 789')
              .col-md-6.form-group
                label Address Line 1
                input.form-control(type='text' placeholder='123 Street')
              .col-md-6.form-group
                label Address Line 2
                input.form-control(type='text' placeholder='123 Street')
              .col-md-6.form-group
                label Country
                select.custom-select
                  option(selected='') United States
                  option Afghanistan
                  option Albania
                  option Algeria
              .col-md-6.form-group
                label City
                input.form-control(type='text' placeholder='New York')
              .col-md-6.form-group
                label State
                input.form-control(type='text' placeholder='New York')
              .col-md-6.form-group
                label ZIP Code
                input.form-control(type='text' placeholder='123')
      .col-lg-4
        h5.section-title.position-relative.text-uppercase.mb-3
          span.bg-secondary.pr-3 Order Total
        .bg-light.p-30.mb-5
          .border-bottom
            h6.mb-3 Products
            .d-flex.justify-content-between
              p Product Name 1
              p $150
            .d-flex.justify-content-between
              p Product Name 2
              p $150
            .d-flex.justify-content-between
              p Product Name 3
              p $150
          .border-bottom.pt-3.pb-2
            .d-flex.justify-content-between.mb-3
              h6 Subtotal
              h6 $150
            .d-flex.justify-content-between
              h6.font-weight-medium Shipping
              h6.font-weight-medium $10
          .pt-2
            .d-flex.justify-content-between.mt-2
              h5 Total
              h5 $160
        .mb-5
          h5.section-title.position-relative.text-uppercase.mb-3
            span.bg-secondary.pr-3 Payment
          .bg-light.p-30
            .form-group
              .custom-control.custom-radio
                input#paypal.custom-control-input(type='radio' name='payment')
                label.custom-control-label(for='paypal') Paypal
            .form-group
              .custom-control.custom-radio
                input#directcheck.custom-control-input(type='radio' name='payment')
                label.custom-control-label(for='directcheck') Direct Check
            .form-group.mb-4
              .custom-control.custom-radio
                input#banktransfer.custom-control-input(type='radio' name='payment')
                label.custom-control-label(for='banktransfer') Bank Transfer
            button.btn.btn-block.btn-primary.font-weight-bold.py-3 Place Order
  // Checkout End
